# =============================================================================
# Production Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values
# Generate secrets with: openssl rand -base64 32
# =============================================================================

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
POSTGRES_PASSWORD=your-secure-postgres-password
POSTGRES_DB=app
POSTGRES_USER=postgres

# -----------------------------------------------------------------------------
# Backend (Django)
# -----------------------------------------------------------------------------
SECRET_KEY=your-django-secret-key

# -----------------------------------------------------------------------------
# Frontend (Next.js)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_BACKEND_URL=https://api.yourdomain.com
NEXTAUTH_URL=https://yourdomain.com
NEXTAUTH_SECRET=your-nextauth-secret

# -----------------------------------------------------------------------------
# GlitchTip (Error Tracking, Performance & Uptime Monitoring)
# -----------------------------------------------------------------------------
GLITCHTIP_SECRET_KEY=your-glitchtip-secret-key-at-least-50-chars
GLITCHTIP_DB_PASSWORD=your-secure-glitchtip-db-password
GLITCHTIP_DOMAIN=https://glitchtip.yourdomain.com
GLITCHTIP_EMAIL_URL=smtp://user:password@smtp.example.com:587
GLITCHTIP_FROM_EMAIL=noreply@yourdomain.com
GLITCHTIP_OPEN_REGISTRATION=false
# Get DSN from GlitchTip UI after creating a project (use glitchtip-web:8000 for Docker networking)
SENTRY_DSN=http://your-key@glitchtip-web:8000/1

# -----------------------------------------------------------------------------
# Optional
# -----------------------------------------------------------------------------
VERSION=latest
