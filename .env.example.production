# =============================================================================
# Production Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values
# Generate secrets with: openssl rand -base64 32
# =============================================================================

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
POSTGRES_PASSWORD=your-secure-postgres-password
POSTGRES_DB=app
POSTGRES_USER=postgres

# -----------------------------------------------------------------------------
# Backend (Django)
# -----------------------------------------------------------------------------
SECRET_KEY=your-django-secret-key

# -----------------------------------------------------------------------------
# Frontend (Next.js)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_BACKEND_URL=https://api.yourdomain.com
NEXTAUTH_URL=https://yourdomain.com
NEXTAUTH_SECRET=your-nextauth-secret

# -----------------------------------------------------------------------------
# BugSink (Error Tracking)
# -----------------------------------------------------------------------------
BUGSINK_SECRET_KEY=your-bugsink-secret-key-at-least-50-chars-long-for-security
BUGSINK_SUPERUSER=admin:your-secure-password
BUGSINK_BASE_URL=https://bugsink.yourdomain.com
# Get DSN from BugSink UI after creating a project (use bugsink:8000 for internal Docker networking)
SENTRY_DSN=http://your-key@bugsink:8000/1

# -----------------------------------------------------------------------------
# Optional
# -----------------------------------------------------------------------------
VERSION=latest
